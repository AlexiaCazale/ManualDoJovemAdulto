@model manualdojovem.ViewModels.ReadVM
@{
    ViewData["Title"] = "Leitura";
}

<div class="container-xxl bg-white p-0">

    <!-- Navbar & Hero Start -->
    <div class="container-xxl position-relative p-0">
        <div class="container-xxl py-5 bg-primary hero-header">
            <div class="container my-5 py-5 px-lg-5">
                <div class="row g-5 py-5">
                    <div class="col-12 text-center">
                        <h1 class="text-white animated slideInDown">
                            @Model.Article.Name</h1>
                        <p class="section-title text-white justify-content-center"></p>
                        <nav aria-label="breadcrumb">
                        </nav>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a asp-action="index" class="text-white">Home</a></li>
                                <li class="breadcrumb-item"><a asp-action="Service" class="text-white">Categorias</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Navbar & Hero End -->

    <div class="col-lg-8 offset-lg-2 col-md-12">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <p class="section-title text-secondary justify-content-center"><span></span>@Model.Article.Name<span></span>
            </p>
        </div>
        <div class="card-body align-items-end pb-2 p-4">

            <span class="text-justify font-weight-normal"
                style="white-space: pre-line">@Model.Article.Description</span>
        </div>
    </div>